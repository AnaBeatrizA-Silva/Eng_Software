     - NomeGenero: string

     + cadastrarGenero()
}

class Ator {
     - NomeAtores: string

     + cadastrarAtor()
}

class Papel {
     - NomePapel: string

     + registrarPapel()
}

class Sala {
     - Capaciade: int

     + cadastrarSala()
}

class Sessao {
     - Horarios: DateTime
     - Status: string

     + criarSessao()
     + encerrarSessao()
     + atualizarSessao()
}

