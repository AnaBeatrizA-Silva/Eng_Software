@startuml Clube de Leitura

    skinparam classAttributeIconSize 0

    class Revista {
        - NumeroEdicao: int
        - anoDaRevista: int
        - TipoColecao: string

        + cadastrarRevista()
    }

    class Emprestimo {
        - dataEmprestimo: Date
        - dataDevolucao: Date

        + registrarEmprestimo()
        + calcularDataDevolucao()
    }

    class Amigo {
        - Nome: string
        - NomeDaMae: string
        - Telefone: string

        + cadastrarAmigo()
    }

    class Caixa {
        - NumeroCaixa: int
        - CorCaixa: string
        - EtiquetaCaixa: string

        + cadastrarCaixa()
        + vincularRevistaACaixa()
    }

    Revista "1..*" -- "1" Caixa
    Emprestimo "1" --* "1" Revista
    Emprestimo "1..*" --* "1" Amigo


@enduml